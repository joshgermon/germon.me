---
import Header from '../components/Header.astro';
export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Manrope&family=Space+Grotesk:wght@500&display=swap" rel="stylesheet"> 
		<title>{title}</title>
	</head>
	<body class="light">
		<Header />
		<main>
			<slot />
		</main>
	</body>
</html>

<style is:global>
	:root {
		color-scheme: dark light;
		--bg-color-light: #fbf5f3;
		--bg-color-dark: #171a21;
		--body-color-light: #171a21;
		--body-color-dark: #fbf5f3;
		--border-color-light: #8c8e91;
		--border-color-dark: #646362;
		--body-font-size: 1rem;
		--heading-font: 'Space Grotesk', sans-serif;
  		--body-font: Manrope, sans-serif;
	}
	html, body {
		margin: 0;
		padding: 0;
	}
	* {
		box-sizing: border-box;
	}
	body {
		--bg-color: var(--bg-color-dark);
		--body-color: var(--body-color-dark);
		--border-color: var(--border-color-dark);
		font-size: var(--body-font-size);
		font-family: var(--body-font);
		background-color: var(--bg-color);
		color: var(--body-color);
		max-width: 640px;
		margin: 0 auto;
		line-height: 1.75;
		padding: 0 1rem;
		transition: background-color 300ms ease;
	}
	body.light {
		--bg-color: var(--bg-color-light);
		--body-color: var(--body-color-light);
		--border-color: var(--border-color-light);
	}
	h1, h2, h3, h4, h5, h6 {
		font-family: var(--heading-font);
		line-height: 1.25;
		font-weight: 500;
		transition: color 300ms ease;
	}
	p {
		transition: background-color 300ms ease;
	}
	main {
		padding-top: 3.5rem;
	}
	button {
		background: none;
		border: none;
	}
</style>
